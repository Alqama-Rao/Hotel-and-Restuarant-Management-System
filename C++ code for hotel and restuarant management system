#define RED     "\x1b[31m"
#define GREEN   "\x1b[32m"
#define YELLOW  "\x1b[33m"
#define BLUE    "\x1b[34m"
#define MAGENTA "\x1b[35m"
#define CYAN    "\x1b[36m"
#define WHITE   "\x1b[0m"
void signin()
{
	static	int k=0;
	char user[]="ADMIN";
	char pass[]="admin";
	int i=0,count=60,j=0;
	char a,pas[20],username[20];
	cout<<"USERNAME: ";
	cin>>username;
	cout<<"\nPASSWORD: ";
	memset(pas,0,20);
	for(i=0,j=0;a!=13;i++)
	{   
		a=getch();
		
		 if(a!=8 && a!=13)
			 {
				pas[j]=a;
				cout<<"*";
				count++;
				j++;
			}
		 else if(a==8&&count!=60)
		{	
			pas[j-1]=0; //memory
			count--;  
			cout<<" ";//on screen
			j--;
	
        }
    }
    if((strcmp(user,username)==0) && (strcmp(pass,pas)==0))
		{
				
		    cout<<"\n\nPASSWORD MATCHED";
	        Sleep(500);
			return;
		}
	else
	{
		if(k<2)
			{
				cout<<"\n\nPassword or Username Incorrect";
				Sleep(500);
				k++;
				system("cls");
				signin();
			}
		else
			{
				Sleep(500);
				system("cls");
				cout<<"\n\nThird Attempt Failed!!";
				exit(0);
			}	
	
	
}
}


